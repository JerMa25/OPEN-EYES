# .env.example
# ============================================================================
# FICHIER DE CONFIGURATION ENVIRONNEMENT - SMART CANE BACKEND
# ============================================================================
# INSTRUCTIONS:
# 1. Copier ce fichier: cp .env.example .env
# 2. Remplir avec vos vraies valeurs
# 3. NE JAMAIS commiter le fichier .env dans Git !
# ============================================================================

# ===========================
# Django Core Settings
# ===========================
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION-use-a-strong-random-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ===========================
# Database Configuration (PostgreSQL)
# ===========================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=smart_cane_db
DB_USER=postgres
DB_PASSWORD=newpassword
DB_HOST=localhost
DB_PORT=5432

# ===========================
# CORS Configuration
# ===========================
# URLs du frontend React autorisées (séparées par des virgules)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173

# ===========================
# SMS Configuration - Smartphone natif
# ===========================
# L'application utilise le module GSM intégré du smartphone
# qui héberge le backend pour envoyer les SMS

# Aucune configuration externe nécessaire
# Les SMS seront envoyés via l'API native du téléphone

# Nombre de tentatives en cas d'échec
SMS_MAX_RETRIES=3

# Timeout (en secondes)
SMS_TIMEOUT=30

# ===========================
# JWT Configuration (Optionnel)
# ===========================
# Durée de vie du token d'accès (en heures)
JWT_ACCESS_TOKEN_LIFETIME_HOURS=1

# Durée de vie du token de rafraîchissement (en jours)
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# ===========================
# Email Configuration (Optionnel - pour notifications)
# ===========================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=votre_email@gmail.com
EMAIL_HOST_PASSWORD=votre_mot_de_passe_email

# ===========================
# Monitoring & Logging (Optionnel)
# ===========================
# Sentry DSN pour le tracking d'erreurs
SENTRY_DSN=

# Niveau de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ===========================
# Production Settings (à activer en production)
# ===========================
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
